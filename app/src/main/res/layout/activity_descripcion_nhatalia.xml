<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.milena.parejotas.DescripcionNhatalia"
    android:background="#795548">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView13"
        android:src="@drawable/img6"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nhatalia Diaz"
        android:id="@+id/textView13"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar6"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ella es una persona con grandes sentimientos, en espera de un amor sincero, que la trate bien y la haga feliz. Le gustan mucho las novelas y practica futbol."
        android:id="@+id/textView14"
        android:textSize="13dp"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:id="@+id/button13"
        android:onClick="volver6"
        android:layout_below="@+id/ratingBar6"
        android:layout_alignRight="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />
</RelativeLayout>

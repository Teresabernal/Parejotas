<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.milena.parejotas.Personas"
    android:background="#795548">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/img1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView4"
        android:src="@drawable/img2"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:src="@drawable/img6"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/imageView6"
        android:src="@drawable/img3"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/imageView5"
        android:src="@drawable/img5"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/imageView8"
        android:src="@drawable/img4"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Para conocer un poco mÃ¡s sobre ellos, basta con tocar el nombre."
        android:id="@+id/textView"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:textColorHighlight="@color/abc_background_cache_hint_selector_material_light"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YURANI"
        android:id="@+id/button2"
        android:onClick="opcion1"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEDUARDO"
        android:id="@+id/button4"
        android:onClick="opcion2"
        android:layout_alignTop="@+id/button2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PEDRO"
        android:id="@+id/button3"
        android:onClick="opcion3"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JACOBO"
        android:id="@+id/button5"
        android:onClick="opcion4"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARICELA"
        android:id="@+id/button6"
        android:onClick="opcion5"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NHATALIA"
        android:id="@+id/button7"
        android:onClick="opcion6"
        android:layout_alignTop="@+id/button6"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />
</RelativeLayout>
